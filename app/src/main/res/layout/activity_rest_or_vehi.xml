<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.example.suraj.orhrdso.RestOrVehi">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome User"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:id="@+id/tvWelcome"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="For Rest House"
        android:id="@+id/btnRestHouse"
        android:layout_gravity="center"
        android:onClick="formRestHouse"
        android:layout_weight="1"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="For Vehical"
        android:id="@+id/btnVehical"
        android:layout_gravity="center"
        android:onClick="formVehical"
        android:layout_weight="1"/>


    </LinearLayout>


</LinearLayout>
